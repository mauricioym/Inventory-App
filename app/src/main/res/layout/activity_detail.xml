<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yuddi.inventoryapp.DetailActivity">

    <LinearLayout
        android:id="@+id/activity_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detail_picture_imageview"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:background="#D1D1D1"/>

        <TextView
            style="@style/detail_field_label"
            android:text="Name"/>

        <EditText
            android:id="@+id/detail_name_edittext"
            style="@style/detail_edit_text"
            android:inputType="textCapSentences"
            android:hint="Name" />

        <TextView
            style="@style/detail_field_label"
            android:text="Quantity"/>

        <EditText
            android:id="@+id/detail_quantity_edittext"
            style="@style/detail_edit_text"
            android:inputType="number"
            android:hint="0" />

        <TextView
            style="@style/detail_field_label"
            android:text="Price"/>

        <EditText
            android:id="@+id/detail_price_edittext"
            style="@style/detail_edit_text"
            android:inputType="numberDecimal"
            android:hint="$0.00" />

        <TextView
            style="@style/detail_field_label"
            android:text="Description"/>

        <EditText
            android:id="@+id/detail_description_edittext"
            style="@style/detail_edit_text"
            android:inputType="textMultiLine"
            android:hint="Description" />

        <TextView
            style="@style/detail_field_label"
            android:text="Supplier's phone"/>

        <EditText
            android:id="@+id/detail_phone_edittext"
            style="@style/detail_edit_text"
            android:inputType="phone"
            android:hint="000000" />

        <TextView
            style="@style/detail_field_label"
            android:text="Supplier's email"/>

        <EditText
            android:id="@+id/detail_email_edittext"
            style="@style/detail_edit_text"
            android:inputType="textEmailAddress"
            android:hint="name@supplier.com" />

    </LinearLayout>

</ScrollView>